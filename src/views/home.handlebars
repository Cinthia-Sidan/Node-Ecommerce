{{>menu}}

<h1>Lista de Productos</h1>
<div class="productos">
    {{#each productos}}
    <div class="producto">
        <h2>{{nombre}}</h2>
        <p>Precio: {{precio}}</p>
        <p>{{descripcion}}</p>
        <input type="number" class="input-prod" value="1" min="1">
        <button class="button-prod" data-id="{{_id}}" data-nombre="{{nombre}}" data-precio="{{precio}}">Agregar al carrito</button>
   
    </div>
    {{/each}}
</div>